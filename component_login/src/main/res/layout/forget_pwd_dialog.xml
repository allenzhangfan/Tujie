<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp">

        <TextView
            android:id="@+id/head_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/size_12dp"
            android:paddingRight="@dimen/size_35dp"
            android:paddingBottom="@dimen/size_8dp"
            android:scaleType="center"
            android:text="请联系管理员"
            android:textColor="@color/black_common"
            android:textSize="@dimen/size_15dp" />

        <ImageView
            android:id="@+id/dialog_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_12dp"
            android:paddingLeft="@dimen/size_35dp"
            android:paddingTop="@dimen/size_12dp"
            android:paddingBottom="@dimen/size_8dp"
            android:src="@drawable/close_dialog"
             />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />

    <RelativeLayout
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="@dimen/size_5dp"
            android:paddingRight="@dimen/size_35dp"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/black_common"
            android:scaleType="center"
            android:text="@string/tell_text" />

        <TextView
            android:id="@+id/tell_copy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_12dp"
            android:text="@string/copy"
            android:textColor="@color/copy_color"
            android:textSize="@dimen/text_size_16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp">

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="@dimen/size_5dp"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/black_common"
            android:paddingRight="@dimen/size_35dp"
            android:scaleType="center"
            android:text="@string/email_text" />

        <TextView
            android:id="@+id/email_copy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_12dp"
            android:text="@string/copy"
            android:textColor="@color/copy_color"
            android:textSize="@dimen/text_size_16sp" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/common_bt_bg"
        android:gravity="center"
        style="@style/MaterialLoginButton"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" />

</LinearLayout>
