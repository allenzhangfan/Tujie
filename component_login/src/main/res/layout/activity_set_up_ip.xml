<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_30dp"
        android:orientation="vertical">

        <include layout="@layout/include_title_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/color_line" />

        <EditText
            android:id="@+id/input_editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_100dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/setip_edittext_bg"
            android:text="@string/edit_ip_local"
            android:paddingLeft="@dimen/size_16dp"
            android:textColor="@color/black_common"
            android:textCursorDrawable="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            style="@style/MaterialLoginButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/common_bt_bg"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

</LinearLayout>
