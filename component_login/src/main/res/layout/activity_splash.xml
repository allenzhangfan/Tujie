<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/splash_screen_bg" />

    <TextView
        android:id="@+id/bottom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_20dp"
        android:text="@string/company_name"
        android:textColor="@color/gray_9e9e9e"
        android:textSize="@dimen/size_12dp" />

    <TextView
        android:id="@+id/zhuanzhu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_44dp"
        android:text="@string/sys_name"
        android:textColor="@color/gray_616161"
        android:textSize="@dimen/size_16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/zhuanzhu_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_12dp"
         />

</RelativeLayout>
