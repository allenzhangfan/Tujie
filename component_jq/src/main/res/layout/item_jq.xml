<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_8dp"
    android:layout_marginTop="@dimen/size_8dp"
    android:layout_marginEnd="@dimen/size_8dp"
    android:background="@drawable/jq_main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp">

        <ImageView
            android:id="@+id/iv_jq"
            android:layout_width="@dimen/size_28dp"
            android:layout_height="@dimen/size_28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_people" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_toRightOf="@+id/iv_jq"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_capture_info"
                style="@style/CommonTextItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_44485A"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_alarm_time"
                style="@style/CommonTextItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_989FB0"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_jq_tag"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_FF503A"
            android:textSize="@dimen/text_size_12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:background="@color/color_E5E6EB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_140dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.netposa.commonres.widget.RoundImageView
                android:id="@+id/iv_capture"
                android:layout_width="@dimen/size_96dp"
                android:layout_height="@dimen/size_96dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_default"
                app:radius="@dimen/size_2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_marginBottom="@dimen/size_8dp"
                android:text="@string/capture_image"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.netposa.commonres.widget.CircleProgressView
                android:id="@+id/cpv_similarity"
                android:layout_width="@dimen/size_70dp"
                android:layout_height="@dimen/size_70dp"
                app:circle_width="@dimen/size_6dp"
                app:end_color="@color/color_2D87F9"
                app:head_color="@color/color_63BBFF"
                app:score_color="@color/color_222222"
                app:score_size="@dimen/text_size_20sp" />

            <TextView
                android:id="@+id/tv_car_number"
                style="@style/CommonTextItem"
                android:layout_width="@dimen/size_96dp"
                android:layout_height="@dimen/size_28dp"
                android:background="@drawable/jq_handle_state_text_bg"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:text="@string/deploy_car_number"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.netposa.commonres.widget.RoundImageView
                android:id="@+id/iv_deploy"
                android:layout_width="@dimen/size_96dp"
                android:layout_height="@dimen/size_96dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_default"
                app:radius="@dimen/size_2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_marginBottom="@dimen/size_8dp"
                android:text="@string/deploy_image"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_11sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:background="@color/color_E5E6EB" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_video" />

        <TextView
            android:id="@+id/tv_camera_location"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_toRightOf="@+id/iv_video"
            android:textColor="@color/color_44485A"
            android:textSize="@dimen/text_size_14sp" />
    </RelativeLayout>
</LinearLayout>
