<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_jq_car_details"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/car_number"
            android:gravity="left"
            android:textColor="@color/color_44485A"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tv_detail_type_car"
            android:layout_width="@dimen/size_65dp"
            android:layout_height="@dimen/size_24dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/alarm_effective_bg"
            android:gravity="center"
            android:text="@string/in_effect"
            android:textColor="@color/color_2CCE9A"
            android:textSize="@dimen/text_size_12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8dp"
        android:background="@color/color_F5F6FA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/Alarm_detail_left_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/belong_ku"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/car_ku_type"
                style="@style/Alarm_detail_right_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@color/color_E5E6EB" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/Alarm_detail_left_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/capture_time"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/car_capture_time"
                style="@style/Alarm_detail_right_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8dp"
            android:background="@color/color_F5F6FA" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/Alarm_detail_left_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_task_name"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/control_car_type"
                style="@style/Alarm_detail_right_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_go_greater"
                android:drawablePadding="@dimen/size_5dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@color/color_E5E6EB" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/Alarm_detail_left_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_name"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/camera_address"
                style="@style/Alarm_detail_right_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_gps"
                android:drawablePadding="@dimen/size_5dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@color/color_E5E6EB" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/Alarm_detail_left_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deal_person"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/deal_person"
                style="@style/Alarm_detail_right_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8dp"
            android:background="@color/color_F5F6FA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_16dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_16dp"
                android:paddingRight="@dimen/size_16dp"
                android:text="@string/remarks"
                android:textColor="@color/color_697084"
                android:textSize="@dimen/text_size_14sp" />

            <EditText
                android:id="@+id/tips_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:background="@null"
                android:gravity="center_vertical|top|left"
                android:hint="@string/remark_hint"
                android:minLines="3"
                android:paddingLeft="@dimen/size_16dp"
                android:paddingRight="@dimen/size_16dp"
                android:textColorHint="@color/color_C0C5D1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_15sp" />
            <TextView
                android:id="@+id/tv_tips_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_vertical|top|left"
                android:paddingLeft="@dimen/size_16dp"
                android:paddingTop="@dimen/size_8dp"
                android:paddingBottom="@dimen/size_8dp"
                android:paddingRight="@dimen/size_16dp"
                android:textColor="@color/color_989FB0"
                android:maxEms="250"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>