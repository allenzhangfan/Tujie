<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_jq_person_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingTop="@dimen/size_4dp"
        android:paddingRight="@dimen/size_16dp">

        <com.netposa.commonres.widget.CircleProgressView
            android:id="@+id/similar_progresview"
            android:layout_width="@dimen/size_32dp"
            android:layout_height="@dimen/size_32dp"
            app:circle_width="@dimen/size_4dp"
            app:end_color="@color/color_2D87F9"
            app:head_color="@color/color_63BBFF"
            app:score_color="@color/color_222222"
            app:score_size="0sp" />

        <TextView
            android:id="@+id/tv_similarity"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="90%"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tv_detail_type_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alarm_undeal_bg"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingTop="@dimen/size_4dp"
            android:paddingRight="@dimen/size_8dp"
            android:paddingBottom="@dimen/size_4dp"
            android:textColor="@color/color_FF503A"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8dp"
        android:background="@color/color_F5F6FA" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/capture_name"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_text"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/capture_gender"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_number"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/captute_id_card"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_text"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/capture_address"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belong_ku"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/capture_lib"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8dp"
        android:background="@color/color_F5F6FA" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/control_task_name"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/capture_lib_name"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_go_greater"
            android:drawablePadding="@dimen/size_5dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />

    <RelativeLayout
        android:id="@+id/rl_camera_addr"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_name"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/camera_addr"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_gps"
            android:drawablePadding="@dimen/size_5dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capture_time"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/capture_time"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_deal_person"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Alarm_detail_left_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deal_person"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/deal_person"
            style="@style/Alarm_detail_right_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:visibility="gone"
        android:id="@+id/common_devider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_F5F6FA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingTop="@dimen/size_8dp"
            android:paddingRight="@dimen/size_16dp"
            android:text="@string/details_inform"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingRight="@dimen/size_16dp"
            android:textColor="@color/color_C0C5D1"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8dp"
        android:background="@color/color_F5F6FA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingTop="@dimen/size_8dp"
            android:paddingRight="@dimen/size_16dp"
            android:text="@string/remarks"
            android:textColor="@color/color_697084"
            android:textSize="@dimen/text_size_14sp" />

        <EditText
            android:id="@+id/tips_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp"
            android:background="@null"
            android:gravity="center_vertical|top|left"
            android:hint="@string/remark_hint"
            android:minLines="3"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingRight="@dimen/size_16dp"
            android:textColorHint="@color/color_C0C5D1"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tv_tips_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top|left"
            android:maxEms="250"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingTop="@dimen/size_8dp"
            android:paddingRight="@dimen/size_16dp"
            android:paddingBottom="@dimen/size_8dp"
            android:textColor="@color/color_989FB0"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>