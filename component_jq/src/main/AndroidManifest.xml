<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.netposa.component.jq">

    <application
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity android:name="com.netposa.component.jq.mvp.ui.activity.JqSearchActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".mvp.ui.activity.AlarmDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name="com.netposa.component.jq.mvp.ui.activity.CapturePictureActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.netposa.component.jq.mvp.ui.activity.ControlTaskDetailActivity" android:screenOrientation="portrait"/>


        <!-- 在组件集成宿主时, 由于宿主已经声明了 CommonSDK 的公有 ConfigModule, 所以在这里只需要声明业务组件自己的 ConfigModule -->
        <meta-data
            android:name="com.netposa.component.jq.app.GlobalConfiguration"
            android:value="ConfigModule" />

    </application>

</manifest>