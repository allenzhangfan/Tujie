<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_56dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_about" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_toStartOf="@+id/iv_go"
        android:layout_toEndOf="@+id/iv_image"
        android:textColor="@color/black_common"
        android:textSize="@dimen/text_size_15sp" />

    <ImageView
        android:id="@+id/iv_go"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/size_16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_go" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_below="@id/iv_image"
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginTop="@dimen/size_17dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/item_view_divider" />

</RelativeLayout>