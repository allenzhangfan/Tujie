<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_56dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_face" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_toStartOf="@+id/switch_button"
        android:layout_toEndOf="@+id/iv_image"
        android:textColor="@color/color_44485A"
        android:textSize="@dimen/text_size_15sp" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/size_31dp"
        android:checked="false"
        app:kswBackDrawable="@drawable/common_switch_selector"
        app:kswThumbColor="@color/white"
        app:kswThumbMargin="@dimen/size_2dp"
        app:kswThumbRangeRatio="2.15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_below="@id/iv_image"
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginTop="@dimen/size_17dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />
</RelativeLayout>