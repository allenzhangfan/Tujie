<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <include layout="@layout/common_view_divider" />

    <LinearLayout
        android:layout_width="@dimen/size_120dp"
        android:layout_height="@dimen/size_120dp"
        android:layout_marginTop="@dimen/size_71dp"
        android:background="@mipmap/ic_logo" />

    <TextView
        style="@style/CommonTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_description"
        android:textColor="@color/color_19233C"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_version"
        style="@style/CommonTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        android:text="@string/app_version"
        android:textColor="@color/color_989FB0"
        android:textSize="@dimen/text_size_14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update"
        style="@style/MaterialLoginButton"
        android:layout_width="@dimen/size_200dp"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginTop="@dimen/size_100dp"
        android:layout_marginBottom="@dimen/size_84dp"
        android:background="@drawable/common_bt_bg"
        android:gravity="center"
        android:text="@string/app_update"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" />

</LinearLayout>