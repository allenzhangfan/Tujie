<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginTop="@dimen/size_56dp"
        android:text="盛桀沧"
        android:textColor="@color/color_tab_text"
        android:textSize="@dimen/text_size_28sp"
        tools:ignore="HardcodedText,RelativeOverlap" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/size_48dp"
        android:layout_height="@dimen/size_48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/size_52dp"
        android:layout_marginEnd="@dimen/size_44dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avatar" />

    <RelativeLayout
        android:id="@+id/rl_go"
        android:layout_width="@dimen/size_48dp"
        android:layout_height="@dimen/size_48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/size_52dp"
        android:gravity="right|center_vertical">

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_go" />
    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10dp"
        android:layout_below="@+id/iv_avatar"
        android:layout_marginTop="@dimen/size_18dp"
        android:background="@color/item_view_divider_my" />

    <ListView
        android:id="@+id/menu_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="@dimen/size_24dp"
        android:layout_marginBottom="@dimen/size_16dp"
        android:divider="@null"
        android:dividerHeight="@dimen/size_0_5dp"
        tools:listitem="@layout/item_my_menu" />

</RelativeLayout>