<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F6FA"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_title_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_person_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:background="@color/white"
        tools:listitem="@layout/item_person_info" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        style="@style/MaterialLoginButton"
        android:layout_width="@dimen/size_327dp"
        android:layout_height="@dimen/size_48dp"
        android:layout_below="@id/rv_person_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/common_bt_bg"
        android:gravity="center"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" />
</RelativeLayout>