<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_74dp"
    android:background="@color/color_000000"
    tools:showIn="@layout/activity_single_pic_preview">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_24dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_adddress"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/size_16dp"
            android:text="西安研发中心南门" />

        <TextView
            android:id="@+id/tv_alarm_time"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adddress"
            android:textColor="@color/color_FFFFFF"
            android:layout_marginTop="@dimen/size_8dp"
            android:textSize="@dimen/size_14dp"
            android:text="2018-10-11 10:12:22" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ry_next"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/size_88dp"
        android:background="@drawable/image_preview_bg">

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_single_search_picture" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ry_downIv"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/size_24dp"
        android:background="@drawable/image_preview_bg">

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_single_download" />
    </RelativeLayout>
</RelativeLayout>