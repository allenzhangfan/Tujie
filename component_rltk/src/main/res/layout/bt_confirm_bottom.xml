<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_32dp"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_reset"
        style="@style/MaterialTextButton.Clcx"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_49dp"
        android:layout_weight="1"
        android:text="@string/reset"
        android:textColor="@color/color_697084"
        android:textSize="@dimen/text_size_16sp"
        app:cornerRadius="@dimen/size_0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_confirm"
        style="@style/MaterialTextButton.Confirm"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_49dp"
        android:layout_weight="1"
        android:background="@drawable/common_bt_bg"
        android:text="@string/confirm"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/text_size_16sp"
        app:cornerRadius="@dimen/size_0dp" />
</LinearLayout>
