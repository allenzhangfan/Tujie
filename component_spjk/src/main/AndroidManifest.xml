<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.netposa.component.spjk">

    <application
        android:theme="@style/AppTheme"
        tools:replace="android:theme">

        <!-- 在组件集成宿主时, 由于宿主已经声明了 CommonSDK 的公有 ConfigModule, 所以在这里只需要声明业务组件自己的 ConfigModule -->
        <meta-data
            android:name="com.netposa.component.spjk.app.GlobalConfiguration"
            android:value="ConfigModule" />

        <activity
            android:name=".mvp.ui.activity.HistoryVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.ui.activity.SpjkActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.ui.activity.DevicelistActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.ui.activity.SpjkSearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.ui.activity.VideoPlayActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".mvp.ui.activity.FollowDevicesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.ui.activity.SingleCameraLocationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvp.ui.activity.HistoryVideoPlayActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".mvp.ui.activity.NeighbouringDevicesActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>