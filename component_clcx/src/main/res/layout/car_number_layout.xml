<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_query_car">

    <TextView
        style="@style/CommonTextItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_7dp"
        android:gravity="left|center_vertical"
        android:text="@string/plate_number"
        android:textColor="@color/color_44485A"
        android:textSize="@dimen/text_size_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:background="@color/color_E5E6EB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_plate_select"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/plate_select_tv_selector"
            android:drawableRight="@drawable/ic_down_list"
            android:drawablePadding="@dimen/size_12dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/size_16dp"
            android:paddingTop="@dimen/size_9dp"
            android:paddingRight="@dimen/size_8dp"
            android:paddingBottom="@dimen/size_9dp"
            android:text="@string/all"
            android:textColor="@color/color_19233C"
            android:textSize="@dimen/text_size_15sp" />

        <com.netposa.commonres.widget.OneKeyClearEditText
            android:id="@+id/okcl_search"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_weight="1"
            android:background="@drawable/search_edit_text_bg"
            android:drawableLeft="@drawable/ic_search_small"
            android:drawableRight="@drawable/ic_close_small"
            android:drawablePadding="@dimen/size_8dp"
            android:hint="@string/query_hint_plate_number"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingRight="@dimen/size_12dp"
            android:singleLine="true"
            android:textColor="@color/color_19233C"
            android:textColorHint="@color/color_697084"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>
</merge>