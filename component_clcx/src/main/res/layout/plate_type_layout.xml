<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_cartype"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_40dp"
    android:layout_marginTop="@dimen/size_24dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        style="@style/CommonTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/plate_type"
        android:textColor="@color/black_common"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        style="@style/CommonTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_plate_type_go"
        android:text="@string/select_type"
        android:textColor="@color/color_989FB0"
        android:textSize="@dimen/text_size_15sp" />

    <ImageView
        android:id="@+id/iv_plate_type_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/size_8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_list_go" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@color/item_view_divider" />
</RelativeLayout>


