<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_24dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp">

        <TextView
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/collect_time"
            android:textColor="@color/color_44485A"
            android:textSize="@dimen/text_size_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/color_E5E6EB" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_begintime"
            style="@style/MaterialTextButton.Clcx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/size_4dp"
            android:layout_weight="1"
            android:text="@string/begin_time"
            android:textSize="@dimen/text_size_13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_endtime"
            style="@style/MaterialTextButton.Clcx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_4dp"
            android:layout_weight="1"
            android:text="@string/end_time"
            android:textSize="@dimen/text_size_13sp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_search"
        style="@style/MaterialTextButton.Search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:layout_marginTop="@dimen/size_32dp"
        android:layout_marginBottom="@dimen/size_24dp"
        android:background="@drawable/common_bt_bg"
        android:gravity="center"
        android:text="@string/query"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" />

</LinearLayout>