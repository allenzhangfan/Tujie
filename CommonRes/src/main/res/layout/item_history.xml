<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp">

        <TextView
            android:id="@+id/tv_name"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_24dp"
            android:gravity="left"
            android:text="@string/query_history"
            android:textColor="@color/black_common"
            android:textSize="@dimen/text_size_14sp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size_24dp"
            android:src="@drawable/ic_delete_small" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginLeft="@dimen/size_24dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:background="@color/item_view_divider" />
</LinearLayout>
