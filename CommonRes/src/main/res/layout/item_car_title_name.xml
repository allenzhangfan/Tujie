<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginEnd="@dimen/size_24dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_44dp"
        android:gravity="center_vertical">

        <TextView
            android:textColor="@color/color_19233C"
            android:textSize="@dimen/text_size_16sp"
            android:id="@+id/tv_title"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:text="@string/face_login" />
    </RelativeLayout>

    <include layout="@layout/common_view_divider" />
</LinearLayout>

