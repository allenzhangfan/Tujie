<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="MatisseTheme" parent="Matisse.Dracula">
        <item name="bottomToolbar.apply.textColor">@color/matisse_bottom_toolbar_apply_text_color
        </item>
        <item name="preview.bottomToolbar.apply.textColor">
            @color/matisse_bottom_toolbar_apply_text_color
        </item>
    </style>

    <style name="MaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="enforceTextAppearance">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MaterialUnelevatedButton" parent="MaterialTextButton">
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialFilterTimeButton" parent="MaterialTextButton">
        <item name="strokeColor">@color/filter_selectable_stroke_color</item>
    </style>

    <style name="MaterialTextButton.Search">
        <item name="cornerRadius">2dp</item>
        <item name="backgroundTint">@color/color_2D87F9</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="rippleColor">@color/btn_ripple_white_color</item>
    </style>

    <style name="MaterialLoginButton" parent="MaterialTextButton">
        <item name="backgroundTint">@color/color_text_blue</item>
        <item name="rippleColor">@color/btn_ripple_white_color</item>
    </style>

    <style name="MaterialTextButton.Clcx">
        <item name="cornerRadius">2dp</item>
        <item name="backgroundTint">@color/bt_bg_color_selector</item>
        <item name="strokeColor">@color/bt_stroke_color_selector</item>
        <item name="android:textColor">@color/bt_text_color_selector</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- BaseDialog的默认样式 -->
    <style name="Base.Dialog" parent="@android:style/Theme.Dialog">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否显示title -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置dialog的背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景是否模糊显示 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 动画效果 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
    </style>

    <style name="Base.Dialog.Loading" parent="Base.Dialog">
        <!-- 背景是否模糊显示 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 动画效果 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="CommonTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/edit_text_hint_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="JqclTabTextStyle" parent="CommonTabTextStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="CommonTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/app_theme_color</item>
        <item name="tabIndicatorHeight">@dimen/size_2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/app_theme_color</item>
        <item name="tabTextColor">@color/color_tab_text</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">@dimen/size_0dp</item>
        <item name="tabPaddingEnd">@dimen/size_0dp</item>
    </style>

    <style name="JqclTabLayoutStyle" parent="CommonTabLayoutStyle">
        <item name="tabTextAppearance">@style/JqclTabTextStyle</item>
    </style>

    <style name="CommonTextItem">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <declare-styleable name="OneKeyClearEditText">
        <attr name="deletecolor" format="reference|color" />
    </declare-styleable>

    <style name="ForgetPwdDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <!-- 警情详情页面左侧的字体-->
    <style name="Alarm_detail_left_text_style">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/face_login_color</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>


    <style name="Alarm_detail_right_text_style">
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:textColor">@color/black_common</item>
        <item name="android:layout_alignParentEnd">true</item>

    </style>

    <!-- 有效button-->

    <style name="AlarmEffectiveButton" parent="MaterialAlarmButton">
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/color_text_blue</item>
        <item name="rippleColor">@color/btn_ripple_white_color</item>
    </style>

    <style name="MaterialAlarmButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="enforceTextAppearance">false</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!--无效button-->
    <style name="AlarmInvalidButton" parent="MaterialAlarmButton">
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/white_20</item>
        <item name="rippleColor">@color/btn_ripple_white_color</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="DateTimeDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
    </style>

    <style name="AppTheme.FaceToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_alpha3</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconSize">@dimen/size_24dp</item>
        <item name="itemIconTint">@color/app_theme_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_text_color</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
    </style>

</resources>