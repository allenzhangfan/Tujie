<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp">

        <LinearLayout
            android:id="@+id/ly_single"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_24dp"
            >

            <RadioButton
                android:layout_gravity="center"
                android:id="@+id/rb_single"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:background="@drawable/single_chose"
                android:layout_marginRight="@dimen/size_24dp"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            style="@style/CommonTextItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ly_single"
            android:gravity="left"
            android:text="@string/query_history"
            android:textColor="@color/color_44485A"
            android:textSize="@dimen/text_size_14sp" />

        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size_24dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginLeft="@dimen/size_24dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:background="@color/color_E5E6EB" />
</LinearLayout>
