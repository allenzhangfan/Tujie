<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@color/item_view_divider" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_18dp"
                android:paddingRight="@dimen/size_18dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/size_150dp"
                        android:layout_height="@dimen/size_150dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false">

                        <ImageView
                            android:id="@+id/captureImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_image_default" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/capture_image"
                        android:textSize="@dimen/text_size_11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/size_150dp"
                        android:layout_height="@dimen/size_150dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/controlImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_image_default"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/alarm_control_pic"
                        android:textSize="@dimen/text_size_11sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5dp"
            android:background="@color/item_view_divider_my" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_18dp"
        android:paddingRight="@dimen/size_18dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/size_72dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp">

            <TextView
                android:id="@+id/simil_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="@dimen/size_20dp"
                android:gravity="center|center_vertical"
                android:text="@string/similarity"
                android:textColor="@color/jq_pic_similarity"
                android:textSize="@dimen/size_12dp" />

            <com.netposa.commonres.widget.CircleProgressView
                android:id="@+id/similar_progresview"
                android:layout_width="@dimen/size_48dp"
                android:layout_height="@dimen/size_48dp"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_toRightOf="@+id/simil_txt"
                app:circle_width="@dimen/size_4dp"
                app:end_color="@color/progress_front_end"
                app:head_color="@color/progress_front_head"
                app:score_color="@color/black_222"
                app:score_size="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nearbyLayout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp">

            <LinearLayout
                android:id="@+id/nearby_carview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_72dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:gravity="center"
                    android:text="@string/name"
                    android:textColor="@color/black_common"
                    android:textSize="@dimen/text_size_22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginBottom="@dimen/size_8dp"
                    android:gravity="center"
                    android:text="@string/resident_ku"
                    android:textColor="@color/jq_pic_similarity"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8dp"
        android:background="@color/item_view_divider_my" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        android:background="@color/item_view_divider_my" />

</LinearLayout>
